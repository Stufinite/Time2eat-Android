<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Third Party Code-->
    <style name="Text.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display3" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display4" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>

    <style name="Text.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>

    <style name="Text.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>

    <!-- Button -->
    <!-- =============================================================================================================================== -->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Flat.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Borderless.Calc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/Text.Display1</item>
    </style>

    <style name="Button.Flat.Borderless.Calc.Action">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Button.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_pressed</item>
        <item name="rippleColor">@color/cardview_dark_background</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- ButtonBar -->
    <!-- =============================================================================================================================== -->

    <style name="ButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:elevation" >@dimen/elevation_fab</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- CardView -->
    <!-- =============================================================================================================================== -->

    <style name="Card" parent="CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <!-- EditText -->
    <!-- =============================================================================================================================== -->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <style name="EditText.Big">
        <item name="android:textAppearance">@style/Text.Display1</item>
    </style>

    <!-- RecyclerView -->
    <!-- =============================================================================================================================== -->

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="RecyclerView.Cards">
        <item name="android:padding">@dimen/keyline_half</item>
    </style>

    <style name="RecyclerViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:paddingLeft">@dimen/keyline</item>
        <item name="android:paddingRight">@dimen/keyline</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <!-- Divider -->
    <!-- =============================================================================================================================== -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.67dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- ProgressBar -->
    <!-- =============================================================================================================================== -->

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar" />

    <!-- ScrollView -->
    <!-- =============================================================================================================================== -->

    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>
